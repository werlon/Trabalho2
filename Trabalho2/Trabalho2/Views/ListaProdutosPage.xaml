<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trabalho2.Views.ListaProdutosPage"
              Title="{Binding Title}"
             x:Name="BrowseListaProdutosPage">

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Nome" Placeholder="Nome do poduto"></Entry>
            <Entry x:Name="Valor" Placeholder="Valor ex. 10,25" Keyboard="Numeric"></Entry>

            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                <Button x:Name="Salvar" Text="Salvar" Clicked="Salvar_Clicked"></Button>
                <Button x:Name="Excluir" Text="Excluir" Clicked="Excluir_Clicked"></Button>
                <Button x:Name="Editar" Text="Editar" Clicked="Editar_Clicked"></Button>
            </StackLayout>

            <ListView x:Name="Lista"></ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
