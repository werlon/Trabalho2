<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trabalho2.Views.ListaComprasPage"
             Title="{Binding Title}"
             x:Name="BrowseListaComprasPage">

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Cliente" Placeholder="Nome do cliente"></Entry>
            <Entry x:Name="CepEndereco" Placeholder="CEP do cliente"></Entry>

            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                <Button x:Name="Salvar" Text="Salvar" Clicked="Salvar_Clicked"></Button>
                <Button x:Name="Excluir" Text="Excluir" Clicked="Excluir_Clicked"></Button>
                <Button x:Name="Editar" Text="Editar" Clicked="Editar_Clicked"></Button>
                <Button x:Name="AddProduto" Text="Adicionar ao Pedido" Clicked="AddProduto_Clicked"></Button>
                <Button x:Name="VerEnd" Text="Ver Endereço" Clicked="VerEnd_Clicked"></Button>
            </StackLayout>

            <ListView x:Name="Lista"></ListView>
        </StackLayout>
    </ContentPage.Content>



</ContentPage>
